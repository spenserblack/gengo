root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[.all-contributorsrc]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{mmd,mermaid}]
indent_style = space
indent_size = 4

[*.rb]
indent_style = space
indent_size = 2

[*.rs]
indent_style = space
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 8

[*.toml]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2
